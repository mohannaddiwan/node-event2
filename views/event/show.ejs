<%- include("../partials/header.ejs") -%>
<%- include("../partials/navbar.ejs") -%>

<div class="container">
<div class="row mt-3">
  <div class="col d-flex justify-content-center align-items-center">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%= event.description %></p>
        <p class="card-text"><%= event.location %></p>
       

        <% if((user) && (user.id) == event.user_id){ %>
        <a href="<%= '/events/edit/' + event.id %>" class="btn btn-primary">Edit</a>
        <button data-id="<%= event.id %>" onclick="deleteEvent()" type="button" id="deleteBtn"  class="btn btn-danger">Delete</button>
        <% } %>

        <span class="badge badge-secondary bg-dark"><%= event.date.toDateString() %></span>
      </div>
    </div>
  </div>
</div>
</div>
<%- include("../partials/footer.ejs") -%>
