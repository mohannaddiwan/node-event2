
    <%- include("../partials/header.ejs") -%>
    <%- include("../partials/navbar.ejs") -%>

    <div class="container">
       
        <div class="row mt-3">
            <div class="col-md-6 offset-md-3">
                <h1>Edit this Event</h1>
                <hr>
               <%- include("../partials/flashMsg.ejs") -%>
              
                <form class="form" action="/events/update" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" class="form-control" value="<%= event.title %>">
                    </div> 
                     <input type="hidden" name="id" value="<%=event.id%>">
                    <div class="form-group">
                        <label for="description">description</label>
                        <input type="text" name="description" id="description" class="form-control" value="<%= event.description %>">
                    </div> 
                    <div class="form-group">
                        <label for="location">location</label>
                        <input type="text" name="location" id="location" class="form-control" value="<%= event.location %>">
                    </div> 
                    <div class="form-group">
                        <label for="date">date</label>
                        <input type="date" name="date" id="date" class="form-control" value="<%= eventDate %>">
                    </div>
                    <div class="form-group">
                    <button class="btn btn-primary mt-2" type="submit">update</button>
                </div>
                </form>
            </div>
        </div>
    </div>

    <%- include("../partials/footer.ejs") -%>
     